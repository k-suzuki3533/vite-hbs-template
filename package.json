{
  "name": "vite-hbs-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsx src/scripts/convertAssetPaths.ts && tsx src/scripts/addTimestamp.ts && tsx src/scripts/optimizeImages.ts",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,js}\" \"vite.config.mts\"",
    "lint:style": "stylelint \"src/**/*.{css,scss}\"",
    "format": "prettier --write \"**/*.{js,ts,scss,css,html,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.94.2",
    "sharp": "^0.33.5",
    "stylelint": "^16.26.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-handlebars": "^2.0.0"
  }
}
